<?xml version="1.0"
    encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- Drop Shadow Stack -->
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:bottom="2dp"
                        android:left="2dp"
                        android:right="2dp"
                        android:top="2dp" />

                    <solid android:color="#f8faff" />

                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:bottom="1.5dp"
                        android:left="1.5dp"
                        android:right="1.5dp"
                        android:top="1.5dp" />

                    <solid android:color="#f1f4fd" />

                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:bottom="1dp"
                        android:left="1dp"
                        android:right="1dp"
                        android:top="1dp" />

                    <solid android:color="#eff3fd" />

                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:bottom="1dp"
                        android:left="1dp"
                        android:right="1dp"
                        android:top="1dp" />

                    <solid android:color="#ebf0fd" />

                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:bottom="1dp"
                        android:left="1dp"
                        android:right="1dp"
                        android:top="1dp" />

                    <solid android:color="#eff1f5" />

                    <corners android:radius="20dp" />
                </shape>
            </item>

            <!-- Background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorspin" />

                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item
                android:right="23dp"
              android:gravity="center_vertical|right"
                android:drawable="@drawable/ic_keyboard_arrow_down_black_24dp" />

        </layer-list>
    </item>
</selector>