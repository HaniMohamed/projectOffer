<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addOffertorequestFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroudColor"
    tools:context="com.example.hp.offermagnet.AddOfferToRequestFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/layout_shape">

            <TextView
                android:id="@+id/offerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"
                android:fontFamily="Gilroy â˜ž"
                android:text="Add Your Offer"
                android:textColor="#3C4960"
                android:textSize="25dp"

                />

            <EditText
                android:id="@+id/offerOfRequest"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_below="@id/offerTitle"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/proposal_shape"
                android:gravity="top"
                android:textColor="@color/colorBlack"
                android:hint="Write your offer here in maximum length 100 char"
                android:maxLength="100"
                android:padding="10dp"
                android:textColorHint="#3C4960"

                />

            <Button
                android:id="@+id/btnSendOffer"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_below="@id/offerOfRequest"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"

                android:layout_marginTop="16dp"
                android:background="@drawable/sign_back_button"
                android:hint="Send"
                android:textColorHint="@color/colorWhite" />

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userimageOffer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/product_image" />


    </RelativeLayout>


</FrameLayout>
