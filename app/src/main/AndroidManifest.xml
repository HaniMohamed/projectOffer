        </activity>
        <activity
            android:name=".UserTab"
            android:label="@string/title_activity_user_tab"
            android:theme="@style/AppTheme" />
        <activity android:name=".Category">

        </activity>
        <activity
            android:name=".NavDrawer"
            android:label="@string/title_activity_nav_drawer"
            android:theme="@style/AppTheme">

        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".uploadImage"></activity>
        <activity android:name=".GPSlocation"/>

        <service android:name=".services.OfferAndRequestsNotifyService" />

